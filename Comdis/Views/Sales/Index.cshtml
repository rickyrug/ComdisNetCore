@model IEnumerable<Comdis.Models.Sales>

@{
    ViewData["Title"] = "Index";
}

<h1>@Comdis.Resources.Resources.Label_Sales</h1>

<div class="row">

   
    <div class="col-md-12">
        <form asp-action="SearchFilters">
            <div class="row">
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="datefrom">@Comdis.Resources.Resources.Label_DateFrom</label>
                                <input type="date" name="datefrom" value="" class="form-control" id="datefrom" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dateto">@Comdis.Resources.Resources.Label_DateTo</label>
                                <input type="date" name="dateto" value="" class="form-control" id="dateto" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-11">
                            <div class="form-group">
                                <label for="salesnumber">@Comdis.Resources.Resources.Label_SalesNumber</label>
                                <input type="number" name="salesnumber" value="" class="form-control" id="salesnumber" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row">
                        <div class="col-md-11">
                            <div class="form-group">
                                <label for="customerList">@Comdis.Resources.Resources.Label_Customer</label>
                                <select name="customerList" class="select2-container  form-control" id="customerList"></select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mt-4">
                    <button class="btn btn-primary">@Comdis.Resources.Resources.Label_Search</button>
                </div>
            </div>
        </form>
     </div>
   
</div>


