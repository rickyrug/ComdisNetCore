                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryAdress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.discount)

